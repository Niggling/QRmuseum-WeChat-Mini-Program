/* index.wxss */

.container {
  background-color: #f5f5f5;
}

.cards {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 11px;
  margin-top: -10px; /* 在这里设置向下的间距 */
  z-index: 2;
}

.card-item {
  width: calc(50% - 30px); /* 计算实际宽度，减去间距 */
  height: 135px; /* 调整卡片的高度 */
  margin-bottom: 10px; /* 调整下方间距 */
  background-color: #ffffff;
  border-radius: 15px;
  box-shadow: 0px 3px 7px rgba(0, 0, 0, 0.2);
  overflow: hidden; /* 防止卡片内容溢出 */
  z-index: 2;
}


.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0px;
  z-index: 3; /* 设置较大的 z-index 值 */
  position: relative;
}

.icon {
  width: 120px;
  height: 106px;
  border-top-left-radius: 10px; /* 左上角圆角 */
  border-top-right-radius: 10px; /* 右上角圆角 */
  margin-bottom: 5px;
  z-index: 2;
}

.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #ddd;
  padding: 10px 0;
  z-index: 2;
}

.footer-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
}

.footer-icon {
  width: 25px;
  height: 25px;
  margin-bottom: 2px;
  z-index: 2;
}

.background {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1; /* 设置较小的 z-index 值 */
}


