.scroll-view {
  height: 100vh;
  overflow: hidden;
  position: relative;
}

.container {
  position: absolute;
  width: 100%;
  top: 0;
  height: 100%; /* 添加height: 100%; */
}

.artwork-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.card {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 70vh;
  background-color: rgb(255, 255, 255);
  border-radius: 20px 20px 0 0;
  overflow: hidden;
  transition: transform 0.3s ease-out;
  transform: translateY(100%);
}

.container:hover .card {
  transform: translateY(0);
}

.tab-bar {
  display: flex;
  margin-top: 5px;
}

.active-tab {
  color: #007AFF;
  border-bottom: 2px solid #007AFF;
  padding: 10px;
  margin-left: 54px;
  margin-right: 54px;
}

.inactive-tab {
  color: #333;
  padding: 10px;
  margin-left: 54px;
  margin-right: 54px;
}

.tab-content {
  width: 100%;
  margin-top: 10px;
}

.tab-panel {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.artwork-info,
.author-info,
.additional-info {
  margin-top: 10px;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 10px;
  box-sizing: border-box;
  background-color: #fff;
}

.qr-code,
.voice-introduction {
  padding: 10px;
  background-color: #007AFF;
  color: #fff;
  border-radius: 5px;
  cursor: pointer;
}
