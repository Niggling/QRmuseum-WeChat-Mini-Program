<view class="container">
  <!-- 图片部分 -->
  <image src="../../../images/tangka1.png" mode="widthFix" class="artwork-image"></image>

  <!-- 卡片容器 -->
  <view class="card-container">
    <!-- 选项卡 -->
    <view class="tab-bar">
      <view class="{{currentTab === 'introduction' ? 'active-tab' : 'inactive-tab'}}" bindtap="switchTab" data-tab="introduction">介绍</view>
      <view class="{{currentTab === 'aboutAuthor' ? 'active-tab' : 'inactive-tab'}}" bindtap="switchTab" data-tab="aboutAuthor">作者</view>
    </view>

    <!-- 选项卡内容 -->
    <view class="tab-content">
      <!-- 介绍选项卡 -->
      <view wx:if="{{currentTab === 'introduction'}}" class="tab-panel">
        <view class="artwork-info">
          <text>创作时间：{{artworkInfo.createTime}}</text>
          <text>\n类型：{{artworkInfo.type}}</text>
          <text>\n尺寸：{{artworkInfo.size}}</text>
          <text>\n尺寸：{{artworkInfo.size}}</text>
          <text>\n尺寸：{{artworkInfo.size}}</text>
          <text>\n</text>
          <text>\n</text>

        </view>
        <view class="additional-info">
          <!-- 这里可以放作品的更多介绍 -->
        </view>
      </view>

      <!-- 关于作者选项卡 -->
      <view wx:if="{{currentTab === 'aboutAuthor'}}" class="tab-panel">
        <view class="author-info">
          <!-- 这里可以放作者的信息 -->
        </view>
      </view>
    </view>
  </view>

  <!-- 最下方：分享二维码和语音介绍 -->
  <view class="bottom-bar">
    <view class="qr-code" bindtap="showQrCode">分享二维码</view>
    <view class="voice-introduction" bindtap="playVoiceIntroduction">语音介绍</view>
  </view>
</view>
